{{ attach_library(active_theme()~'/card') }}

{% if rows %}
<section class="L LW-third">

  {% for row in rows %}
    <article {{ row.attributes.addClass('card', 'w') }}>

      <div class="card__icon card__icon--admin-structure-contact"></div>

      <h3 class="card__title">{{ row.cells.form.content  }}</h3>
      <b>{{ row.cells.recipients.content }}</b>

      <p class="card__text">
        {{ row.cells.form.content }}
        selected:? {{ row.cells.selected.content }}

      </p>
      {{ row.cells.operations.content }}
    </article>
  {% endfor %}
{% endif %}
