{% if links -%}

  {%- if heading -%}
    {%- if heading.level -%}
      <{{ heading.level }}{{ heading.attributes }}>{{ heading.text }}</{{ heading.level }}>
    {%- else -%}
      <h2{{ heading.attributes }}>{{ heading.text }}</h2>
    {%- endif -%}
  {%- endif -%}

  {% set removeclasses = [
    'operations',
    'clearfix',
    ]
  %}

{% if node_edit %}

  {% for item in links %}
    {% if item.link %}
      {{ item.link }}
    {% elseif item.text_attributes %}
      {{ item.text }}
    {% else %}
      {{ item.text }}
    {% endif %}
  {%- endfor -%}

{% else %}
  <ul{{ attributes.removeclass(removeclasses) }}>
    {%- for item in links -%}
      <li{{ item.attributes.addClass }}>
        {%- if item.link -%}
          {{ item.link }}
        {%- elseif item.text_attributes -%}
          <span{{ item.text_attributes }}>{{ item.text }}</span>
        {%- else -%}
          {{ item.text }}
        {%- endif -%}
      </li>
    {%- endfor -%}
  </ul>
{% endif %}


{%- endif %}
